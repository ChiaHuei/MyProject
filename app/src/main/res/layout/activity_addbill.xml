<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddbillActivity"
    android:orientation="vertical"
    android:background="@drawable/background_all">

    <LinearLayout
        android:id="@+id/add_bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="back"
            android:textSize="32sp"
            android:gravity="center|left"
            android:layout_marginLeft="12dp"
            android:textColor="#9F9F9F"
            android:textStyle="bold"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/add_bt_outcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支出"
            android:layout_weight="1"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/selected_item_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            />
        <Button
            android:id="@+id/add_bt_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入"
            android:layout_weight="1"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/unselected_item_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="日期："
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/add_tv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="center|left"
            android:text="2024/10/23"
            android:textColor="#14D1A5"
            android:textSize="18sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="類型："
            android:textSize="18sp"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/add_spinner_add_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="金額："
            android:textSize="18sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/add_et_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="內容："
            android:textSize="18sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/add_et_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center|left"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_bt_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增"
        android:layout_margin="16dp"
        app:cornerRadius="8dp"
        android:backgroundTint="#8A83FF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="right"/>


</LinearLayout>